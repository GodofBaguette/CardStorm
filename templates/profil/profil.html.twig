{% extends 'base.html.twig' %}

{% block title %}CARDSTORM{% endblock %}

{% block body %}

<div class="container.fluid" id="salut">
    <h1 class="text-center">Salut {{ user.prenom }} !</h1>
</div>

<div class="container.fluid" id="menuprofil">
    <div class="row">
        <div class="col-6 text-center">
            <a href="{{ path("allcollection", {"pseudo" : user.pseudo}) }}"><button class="btn btn-lg btn-dark">Mes Collections</button></a>
        </div>
        <div class="col-6 text-center">
            <a href="{{ path("createcollection", {"pseudo" : user.pseudo}) }}"><button class="btn btn-lg btn-dark">Cr√©er une collection</button></a>
        </div>
    </div>
</div>

<div class="container.fluid">
        <h3 class="w-50 mt-2 p-2" id="infoprofil">PSEUDO : {{ user.pseudo }}</h3>
        <h3 class="w-50 mt-2 p-2" id="infoprofil">EMAIL : {{ user.email }}</h3>
        <h3 class="w-50 mt-2 p-2" id="infoprofil">NOM PRENOM : {{ user.nom }} {{ user.prenom }}</h3>
</div>

<div class="container.fluid" id="menuprofil">
    <div class="row">        
        <div class="col-6 text-center">
            <a href="{{ path("update", {"pseudo" : user.pseudo}) }}"><button class="btn btn-lg btn-dark">Modifier le profil</button></a>
        </div>
        <div class="col-6 text-center">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="/admin"><button class="btn btn-lg btn-dark">Espace Administrateur</button></a>
            {% endif %}
        </div>
    </div>
</div>



{% endblock %}
