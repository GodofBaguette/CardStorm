{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
{# formulaire de connexion #}
<div class="container">
    <form method="post" id="form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">CONNEXION</h1>
        <label for="inputPseudo">Pseudo</label>
        <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" required autofocus>
        <label for="inputPassword" id="fieldform">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-dark" type="submit" id="fieldform">
            Se connecter
        </button>
    </form>
</div>
{% endblock %}

