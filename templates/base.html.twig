<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- police texte -->
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
        <!-- police titre -->
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Concert+One&display=swap" rel="stylesheet">
        <title>{% block title %}CARDSTORM{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>
    <body>
        {% block header %}
        <header>
            <div class="container" id="bghead">
                <div class="row">
                    <div class="col">
                        <img id="logohead" src="{{ asset('logos/logo.png') }}" alt="image logo" width="300" class="img-fluid">
                    </div>
                    <div class="col">
                        <h1 id="titlehead" class="display-1">CARDSTORM</h1>
                    </div>
                </div>
            </div>
            <nav class="navbar navbar-expand-sm navbar-dark" id="navbar">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="{{ path("accueil") }}">ACCUEIL</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">PRÉSENTATION</a></li>
                    <li class="nav-item"><a class="nav-link" href="https://discord.gg/wsyrkCddwZ">DISCORD</a></li>                
                    {% if user %}
                        <li class="nav-item"><a class="nav-link" href="{{ path("profil", {"pseudo" : app.user.pseudo}) }}">PROFIL</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path("app_logout") }}">DECONNECTION</a></li>
                    {% else %}   
                        <li class="nav-item"><a class="nav-link" href="{{ path("app_register") }}">CREER UN COMPTE</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path("app_login") }}">CONNECTION</a></li>
                    {% endif %}

                </ul>
            </nav>
        </header>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <img id="logofooter" src="{{ asset('logos/logo.png') }}" alt="cardstorm logo" width="300" class="img-fluid">
                    </div>
                    <div class="col">
                        <nav class="navbar navbar-dark">
                            <ul class="navbar-nav">
                                <li class="nav-item"><a class="nav-link" href="{{ path("accueil") }}">ACCUEIL</a></li>
                                <li class="nav-item"><a class="nav-link" href="#">PRÉSENTATION</a></li>
                                {% if user %}
                                    <li class="nav-item"><a class="nav-link" href="{{ path("profil", {"pseudo" : user.pseudo}) }}">PROFIL</a></li>
                                    <li class="nav-item"><a class="nav-link" href="{{ path("app_logout") }}">DECONNECTION</a></li>
                                {% else %}   
                                    <li class="nav-item"><a class="nav-link" href="{{ path("app_register") }}">CREER UN COMPTE</a></li>
                                    <li class="nav-item"><a class="nav-link" href="{{ path("app_login") }}">CONNECTION</a></li>
                                {% endif %}
                            </ul>
                        </nav>
                    </div>
                    <div class="col" id="discord">
                        <a href="https://discord.gg/wsyrkCddwZ"><img src="{{ asset('logos/discord.png') }}" alt="logo discord" width="120" class="img-fluid"></a>
                    </div>
                </div>
            </div>
        </footer>
        {% endblock %}
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
